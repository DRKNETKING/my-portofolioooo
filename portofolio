  <!-- MODAL GENERIC (untuk project detail) -->
  <div id="modalBackdrop" class="modal-backdrop" onclick="closeModal(event)" role="dialog" aria-modal="true" style="transition:opacity .18s">
    <div id="modal" class="modal" tabindex="-1" onclick="event.stopPropagation()">
      <div style="display:flex;justify-content:space-between;align-items:center">
        <h3 id="modalTitle">Judul Proyek</h3>
        <button class="close" aria-label="Tutup" onclick="closeModal(true)">Tutup ✕</button>
