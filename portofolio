  <!-- LIGHTBOX for gallery -->
  <div id="lightboxBackdrop" class="modal-backdrop" onclick="closeLightbox(event)" style="display:none">
    <div class="modal" onclick="event.stopPropagation()">
      <img id="lightboxImg" src="" alt="">
      <div class="meta">
        <div id="lightboxCaption" class="muted small"></div>
        <button class="close" onclick="closeLightbox(true)">Tutup ✕</button>
