      <div style="display:flex;gap:8px;margin-top:12px">
        <a id="modalDemo" class="btn btn-primary" href="#" target="_blank" rel="noopener">Buka Demo</a>
        <a id="modalRepo" class="btn btn-ghost" href="#" target="_blank" rel="noopener">Lihat Kode</a>
      </div>
    </div>
  </div>

  <script>
    // dynamic year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Simple modal content for each project id
    const projects = {
      1: {
        title: 'Website Toko Online',
        body: 'Website Toko Online — Single page responsive untuk UKM. Peran: Front-end dan integrasi API pembayaran. Teknologi: HTML5, CSS3, Vanilla JS. Hasil: meningkatkan trafik dan conversion rate +18%.',
        demo: '#',
        repo: '#'
      },
      2: {
        title: 'Dashboard Admin',
        body: 'Dashboard Admin — panel manajemen untuk stok dan pesanan. Peran: Front-end developer; membuat komponen tabel & filter. Teknologi: React, REST API.',
        demo: '#',
        repo: '#'
      },
      3: {
        title: 'Portfolio Photography',
        body: 'Portfolio Photography — galeri performa tinggi dengan lazy loading dan optimasi gambar. Peran: penerapan teknik optimasi dan SEO.',
        demo: '#',
        repo: '#'
      }
    };

    function openModal(id){
      const p = projects[id];
      if(!p) return alert('Proyek tidak ditemukan');
      document.getElementById('modalTitle').textContent = p.title;
      document.getElementById('modalBody').textContent = p.body;
      document.getElementById('modalDemo').href = p.demo;
      document.getElementById('modalRepo').href = p.repo;
      const mb = document.getElementById('modalBackdrop');
      mb.style.display = 'flex';
      document.body.style.overflow = 'hidden';
    }
    function closeModal(evt){
      // if evt is boolean true (close btn) or clicked backdrop
      if(evt === true || evt.target === document.getElementById('modalBackdrop')){
        document.getElementById('modalBackdrop').style.display = 'none';
        document.body.style.overflow = '';
      }
    }

    // Contact form: open mail client with prefilled content
    function sendEmail(e){
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      const subject = document.getElementById('subject').value.trim() || 'Permintaan dari portofolio';
      const message = document.getElementById('message').value.trim();

      const to = 'email@domain.com'; // Ganti dengan emailmu
      const body = encodeURIComponent(
        `Nama: ${name}\nEmail: ${email}\n\nPesan:\n${message}`
      );

      const mailto = `mailto:${to}?subject=${encodeURIComponent(subject)}&body=${body}`;
      window.location.href = mailto;
    }

    // Small accessibility: allow Esc to close modal
    document.addEventListener('keydown', (ev) => {
      if(ev.key === 'Escape'){
        closeModal(true);
      }
    });
  </script>
