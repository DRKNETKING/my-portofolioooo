  <script>
    // dynamic year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Projects data (used in modal)
    const projects = {
      1: {
        title: 'Website Toko Online',
        body: 'Single page responsive + katalog produk, integrasi checkout sederhana. Peran: Front-end; Teknologi: HTML5, CSS3, JS. Hasil: meningkatkan konversi.',
        demo: '#',
        repo: '#',
        tags: ['HTML','CSS','JavaScript']
      },
      2: {
        title: 'Dashboard Admin',
        body: 'Panel manajemen stok & pesanan dengan filter dan laporan. Peran: Front-end; Teknologi: React, REST API.',
        demo: '#',
        repo: '#',
        tags: ['React','API','Tailwind']
      },
      3: {
        title: 'Galeri Foto',
        body: 'Galeri foto performa tinggi dengan lazy loading, optimasi gambar, dan lightbox. Peran: optimasi & UI.',
        demo: '#',
        repo: '#',
        tags: ['Image Opt','SEO','UI/UX']
      }
    };

    // open project modal
    function openModalProject(id){
      const p = projects[id];
      if(!p) return alert('Proyek tidak ditemukan');
      document.getElementById('modalTitle').textContent = p.title;
      document.getElementById('modalBody').textContent = p.body;
      document.getElementById('modalDemo').href = p.demo;
      document.getElementById('modalRepo').href = p.repo;
      const mb = document.getElementById('modalBackdrop');
      mb.style.display = 'flex';
      document.body.style.overflow = 'hidden';
      // focus
      document.getElementById('modal').focus();
    }

    function closeModal(evt){
      if(evt === true || evt.target === document.getElementById('modalBackdrop')){
        document.getElementById('modalBackdrop').style.display = 'none';
        document.body.style.overflow = '';
      }
    }

    // gallery open
    function openGallery(){
      const sec = document.getElementById('gallery');
      if(sec.style.display === 'none' || sec.style.display === ''){
        sec.style.display = 'block';
        sec.scrollIntoView({behavior:'smooth'});
      } else {
        sec.scrollIntoView({behavior:'smooth'});
      }
    }

    // lightbox
    function openLightbox(src, caption){
      document.getElementById('lightboxImg').src = src;
      document.getElementById('lightboxCaption').textContent = caption || '';
      document.getElementById('lightboxBackdrop').style.display = 'flex';
      document.body.style.overflow = 'hidden';
    }
    function closeLightbox(evt){
      if(evt === true || evt.target === document.getElementById('lightboxBackdrop')){
        document.getElementById('lightboxBackdrop').style.display = 'none';
        document.body.style.overflow = '';
        document.getElementById('lightboxImg').src = '';
      }
    }

    // filtering logic for toolbar chips
    function filterProjects(type){
      const grid = document.getElementById('projectsGrid');
      const cards = Array.from(grid.querySelectorAll('.project-card'));
      cards.forEach(card => {
        const t = card.getAttribute('data-type') || 'web';
        if(type === 'all' || type === t){
          card.style.display = '';
        } else {
          card.style.display = 'none';
        }
      });
    }

    // filter by tag (clicked tag)
    function filterByTag(tag){
      const grid = document.getElementById('projectsGrid');
      const cards = Array.from(grid.querySelectorAll('.project-card'));
      cards.forEach(card => {
        const idTitle = card.querySelector('h3')?.textContent?.trim();
        // find project id by title in projects object
        let match = false;
        for(const [id,p] of Object.entries(projects)){
          if(p.title === idTitle && p.tags.includes(tag)){
            match = true; break;
          }
        }
        if(match) {
          card.style.display = '';
          card.classList.add('focus-ring');
          setTimeout(()=>card.classList.remove('focus-ring'), 1200);
        } else {
          card.style.display = 'none';
        }
      });
    }

    // Scroll helper
    function scrollToSection(id){
      const el = document.getElementById(id);
      if(el) el.scrollIntoView({behavior:'smooth', block:'start'});
    }

    // keyboard accessibility: Esc to close modals
    document.addEventListener('keydown', (ev) => {
      if(ev.key === 'Escape'){
        closeModal(true);
        closeLightbox(true);
      }
    });

    // init: lazy load profile, set gallery hidden initially
    (function init(){
      const img = document.getElementById('profilePhoto');
      if(img) img.loading = 'lazy';
      // hide gallery initially
      const gallerySection = document.getElementById('gallery');
      if(gallerySection) gallerySection.style.display = 'none';
      // set tabindex for gallery images
      Array.from(document.querySelectorAll('.gallery img')).forEach(i=>{
        i.loading = 'lazy';
      });
    })();
  </script>
</body>
</html>


